<p>
  <% if rant.user_id != current_user.id %>
    <% if current_user.is_following?(rant.user) %>
      <%= rant.user.full_name%> <%= link_to "Unfollow", user_follower_path(user_id: rant.user, id: current_user.id), method: :delete %><br>
    <% else %>
      <%= rant.user.full_name%> <%= link_to "Follow", user_followers_path(rant.user), method: :post %><br>
    <% end  %>
  <% end %>
  <%= rant.content %>
</p>
<%= link_to("Delete", rant_path(rant), method: :delete) if rant.user_id == current_user.id %>