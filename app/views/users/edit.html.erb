<h1>Edit Your Profile</h1>

<%= form_for @user, url: user_path, method: :patch do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :bio %>
  <%= f.text_area :bio %><br>

  <%= f.submit "Update User" %>
<% end %>